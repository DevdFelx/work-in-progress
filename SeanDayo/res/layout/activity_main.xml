
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/mainbg"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/abtFacebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/button_about"
        android:textColor="#38C0F4" />

    <Button
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/abtTwitter"
        android:layout_below="@+id/abtTwitter"
        android:text="@string/button_contact"
        android:textColor="#38C0F4" />

    <Button
        android:id="@+id/gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/abtFacebook"
        android:layout_alignLeft="@+id/abtFacebook"
        android:text="@string/button_photo"
        android:textColor="#38C0F4" />

    <Button
        android:id="@+id/abtTwitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/abtFacebook"
        android:layout_below="@+id/abtFacebook"
        android:text="@string/button_prod"
        android:textColor="#38C0F4" />

</RelativeLayout>