
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/mainbg"
    tools:context=".MainActivity" >


    <Button
        android:id="@+id/about"
        android:textColor="#d5d42c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/photography"
        android:layout_centerVertical="true"
        android:text="@string/button_about" />

    <Button
        android:id="@+id/photography"
        android:textColor="#d5d42c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/about"
        android:layout_alignLeft="@+id/wearable"
        android:text="@string/button_photo" />

    <Button
        android:id="@+id/wearable"
        android:textColor="#d5d42c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/photography"       
        android:text="@string/button_prod" />

    <Button
        android:id="@+id/contact"
        android:textColor="#d5d42c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/about"
        android:layout_below="@+id/about"      
        android:text="@string/button_contact" />

</RelativeLayout>